<div id="comment-<%= comment.id %>" class="comment-item py-3 border-b border-gray-100 last:border-b-0">
  <%= form_with model: comment,
      url: comment_path(comment),
      method: :patch,
      data: { turbo: true },
      class: "w-full" do |f| %>
    <div class="flex items-start space-x-3">
      <!-- アイコン部分 -->
      <div class="w-6 h-6 rounded-full flex-shrink-0 mt-1">
        <% if comment.user.profile_image.attached? %>
          <%= image_tag comment.user.profile_image,
                alt: comment.user.name,
                class: "w-full h-full object-cover rounded-full" %>
        <% else %>
          <div class="bg-neutral text-neutral-content rounded-full w-6 h-6 flex items-center justify-center">
            <i class="fa-solid fa-user text-xs"></i>
          </div>
        <% end %>
      </div>

      <!-- 編集フォーム -->
      <div class="flex-1">
        <div class="flex items-baseline space-x-2 mb-2">
          <span class="text-sm font-medium text-gray-900">
            <%= comment.user.name.presence || "匿名" %>
          </span>
          <span class="text-xs text-gray-500">
            <%= time_ago_in_words(comment.created_at) %>前
          </span>
        </div>

        <!-- エラーメッセージ -->
        <% if comment.errors.any? %>
          <div class="mb-3 p-2 bg-red-100 border border-red-400 rounded-md">
            <div class="text-sm text-red-700">
              <i class="fas fa-exclamation-circle mr-1"></i>
              <%= comment.errors.full_messages.first %>
            </div>
          </div>
        <% end %>

        <!-- テキストエリア -->
        <div class="bg-gray-100 rounded-lg shadow-sm mb-2">
          <%= f.text_area :body,
              class: "w-full bg-transparent text-sm border-none focus:outline-none px-3 py-2 resize-none",
              rows: 2,
              placeholder: "コメントを編集..." %>
        </div>

        <!-- 更新ボタン -->
        <div class="text-right">
          <%= f.submit "更新",
                class: "btn btn-primary py-2 px-6 shadow-md transition duration-200 max-w-xs" %>
        </div>
      </div>
    </div>
  <% end %>
</div>