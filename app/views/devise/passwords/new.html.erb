<% content_for(:title, t(".title")) %>

<section class="px-4 py-12 sm:px-6 lg:px-8">
  <!-- エラーメッセージ -->
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="max-w-md w-full mx-auto bg-white p-4 sm:p-6 rounded-lg shadow-md">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "space-y-4" }) do |f| %>
      <h2 class="ext-xl sm:text-2xl font-bold text-center mb-6">パスワード再設定</h2>

      <!-- メールアドレス -->
      <div>
        <label class="block text-gray-700 font-semibold mt-6 mb-1">
          <i class="fas fa-envelope"></i>
          メールアドレス <span class="text-red-500">*</span>
        </label>
        <%= f.email_field :email, class: "w-full p-3 border border-gray-300 rounded-md shadow-sm mb-4", placeholder: "メールアドレスを入力してください", autofocus: true, autocomplete: "email" %>
      </div>

      <!-- 送信ボタン -->
      <div class="mt-6">
        <%= button_tag type: "submit", class: "btn btn-primary py-2 px-6 shadow-md w-full flex items-center justify-center gap-2" do %>
          <i class="fas fa-paper-plane"></i>
          確認メールを送信
        <% end %>
      </div>
    <% end %>

    <!-- ログインページへのリンク -->
    <div class="text-center mt-4">
      <%= link_to new_session_path(resource_name), class: "btn bg-gray-300 hover:bg-gray-400 text-gray-800 py-2 px-6 shadow-md w-full flex items-center justify-center gap-2" do %>
        <i class="fas fa-arrow-left"></i>
        戻る
      <% end %>
    </div>
  </div>
</section>