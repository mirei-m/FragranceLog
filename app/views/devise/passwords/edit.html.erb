<% content_for(:title, t(".title")) %>

<section class="px-4 py-12 sm:px-6 lg:px-8">
  <!-- エラーメッセージ -->
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="max-w-md w-full mx-auto bg-white p-4 sm:p-6 rounded-lg shadow-md">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "space-y-4" }) do |f| %>
      <h2 class="ext-xl sm:text-2xl font-bold text-center mb-6">パスワード再設定</h2>

      <!-- パスワード -->
      <div>
        <label class="block text-gray-700 font-semibold mb-1">
          <i class="fas fa-lock mr-1"></i>
          パスワード <span class="text-red-500">*</span>
        </label>
        <%= f.password_field :password, class: "w-full p-3 border border-gray-300 rounded-md shadow-sm", placeholder: "パスワードを入力してください（6文字以上）", autofocus: true, autocomplete: "new-password" %>
        <p class="text-gray-500 text-sm mt-1">（6文字以上）</p>
        </div>

      <!-- パスワード確認 -->
      <div>
        <label class="block text-gray-700 font-semibold mb-1">
          <i class="fas fa-lock mr-1"></i>
          パスワード確認 <span class="text-red-500">*</span>
        </label>
        <%= f.password_field :password_confirmation, class:"w-full p-3 border border-gray-300 rounded-md shadow-sm", placeholder: "パスワードを再入力してください", autocomplete: "new-password" %>
        <p class="text-gray-500 text-sm mt-1">（6文字以上）</p>
        </div>

      <!-- リセットトークン -->
      <%= f.hidden_field :reset_password_token %>

      <!-- 送信ボタン -->
      <div class="form-control mt-6">
        <%= button_tag type: "submit", class: "btn btn-primary py-2 px-6 rounded-lg shadow-md w-full flex items-center justify-center gap-2" do %>
        パスワード再設定
        <% end %>
      </div>
    <% end %>
  </div>
</section>