<% content_for(:title, t("devise.sessions.new.sign_in")) %>

<section class="px-4 py-12 sm:px-6 lg:px-8">
  <h1 class="text-3xl font-bold mb-6 text-center"><i class="fa-solid fa-right-to-bracket"></i>  <%= t("devise.sessions.new.sign_in") %></h1>

  <div class="max-w-md w-full mx-auto bg-white p-4 sm:p-6 rounded-xl shadow-lg">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-4 mt-6" }) do |f| %>
    <div>
      <label class="block font-semibold mb-1"><i class="fa-solid fa-envelope"></i>  メールアドレス <span class="text-red-500">*</span></label>
      <%= f.email_field :email, class: "w-full p-3 border border-gray-300 rounded-md shadow-sm", placeholder: "メールアドレスを入力してください", autofocus: true, autocomplete: "email" %>
    </div>

    <div>
      <label class="block text-gray-700 font-semibold mb-1"><i class="fa-solid fa-key"></i>  パスワード <span class="text-red-500">*</span></label>
      <%= f.password_field :password, class: "w-full p-3 border border-gray-300 rounded-md shadow-sm", placeholder: "パスワードを入力してください（6文字以上）", autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit t("devise.sessions.new.sign_in"), class: "btn btn-primary py-2 px-6 shadow-md transition duration-200 w-full" %>
    </div>
    <% end %>

    <!-- パスワード再発行 -->
    <div class="text-center mt-4">
      <%= link_to "パスワードをお忘れの方はこちら", new_password_path(resource_name), class: "text-sm text-gray underline link link-hover hover:text-secondary" %>
    </div>

    <!-- 新規登録 -->
    <div class="text-center mt-4">
      <%= link_to "アカウント登録はこちら", new_registration_path(resource_name), class: "btn bg-gray-300 hover:bg-gray-400 text-gray-800 py-2 px-6 shadow-md transition duration-200 w-full" %>
    </div>

    <!-- 区切り線 -->
    <div class="flex items-center my-10">
      <div class="flex-grow border-t border-gray-600"></div>
      <span class="mx-4 text-gray-600 text-sm">または</span>
      <div class="flex-grow border-t border-gray-600"></div>
    </div>

    <!-- Googleログイン -->
    <% if devise_mapping.omniauthable? %>
      <div class="flex flex-col items-center space-y-6">
        <%= button_to user_google_oauth2_omniauth_authorize_path, method: :post, data: { turbo: false }, class: "rounded-md overflow-hidden transition transform hover:scale-105 w-fit" do %>
          <%= image_tag("web_light_rd_SI@1x.png", alt: "Googleでログイン", class: "w-[200px] h-[44px]") %>
        <% end %>
      </div>
    <% end %>
  </div>
</section>
