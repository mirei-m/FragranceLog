<% content_for(:title, t("devise.registrations.new.sign_up")) %>

<section class="px-4 py-12 sm:px-6 lg:px-8">
  <h1 class="text-3xl font-bold mb-6 text-center">
    <i class="fa-solid fa-user-plus"></i>
    <%= t("devise.registrations.new.sign_up") %>
  </h1>

  <div class="max-w-md w-full mx-auto bg-white p-4 sm:p-6 rounded-xl shadow-lg">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-4 mt-6" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <!-- 名前 -->
      <div>
        <label class="block font-semibold mb-1">
          <i class="fa-solid fa-user"></i> 名前 <span class="text-red-500">*</span>
        </label>
        <%= f.text_field :name, autofocus: true, class: "w-full p-3 border border-gray-300 rounded-md shadow-sm", placeholder: "表示名を入力してください" %>
      </div>

      <!-- メール -->
      <div>
        <label class="block font-semibold mb-1">
          <i class="fa-solid fa-envelope"></i> メールアドレス <span class="text-red-500">*</span>
        </label>
        <%= f.email_field :email, autocomplete: "email", class: "w-full p-3 border border-gray-300 rounded-md shadow-sm", placeholder: "メールアドレスを入力してください" %>
      </div>

      <!-- パスワード -->
      <div>
        <label class="block font-semibold mb-1">
          <i class="fa-solid fa-key"></i> パスワード
          <% if @minimum_password_length %>
            <span class="text-sm text-gray-500">（<%= @minimum_password_length %>文字以上）</span>
          <% end %>
          <span class="text-red-500">*</span>
        </label>
        <%= f.password_field :password, autocomplete: "new-password", class: "w-full p-3 border border-gray-300 rounded-md shadow-sm", placeholder: "パスワードを入力してください" %>
      </div>

      <!-- パスワード確認 -->
      <div>
        <label class="block font-semibold mb-1">
          <i class="fa-solid fa-check"></i> パスワード確認 <span class="text-red-500">*</span>
        </label>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full p-3 border border-gray-300 rounded-md shadow-sm", placeholder: "もう一度入力してください" %>
      </div>

      <!-- 送信ボタン -->
      <div>
        <%= f.submit t("devise.registrations.new.sign_up"), class: "btn btn-primary py-2 px-6 shadow-md transition duration-200 w-full" %>
      </div>
    <% end %>

    <!-- ログイン導線 -->
    <div class="text-center mt-4">
      <%= link_to "すでにアカウントをお持ちの方はこちら", new_session_path(resource_name), class: "btn bg-gray-300 hover:bg-gray-400 text-gray-800 py-2 px-6 shadow-md transition duration-200 w-full" %>
    </div>
  </div>
</section>
